# ============================================
# MY LIST API - Environment Configuration
# ============================================
# Copy this file to .env and update values
# Command: cp .env.example .env
# ============================================

# -----------------
# SERVER CONFIG
# -----------------
PORT=3000
NODE_ENV=development

# -----------------
# MONGODB CONFIG
# -----------------
# Local Docker (docker-compose up):
MONGODB_URI=mongodb://admin:password123@localhost:27017/mylist_db?authSource=admin

# MongoDB Atlas (Production):
# MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/mylist_db?retryWrites=true&w=majority

# -----------------
# REDIS CONFIG
# -----------------
# Local Docker (docker-compose up):
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# AWS ElastiCache (Production):
# REDIS_HOST=your-redis-cluster.cache.amazonaws.com
# REDIS_PORT=6379
# REDIS_PASSWORD=your-redis-password

# -----------------
# RATE LIMITING
# -----------------
# Window in milliseconds (60000 = 1 minute)
RATE_LIMIT_WINDOW_MS=60000
# Max requests per window
RATE_LIMIT_MAX_REQUESTS=100

# -----------------
# PAGINATION
# -----------------
DEFAULT_PAGE_LIMIT=10
MAX_PAGE_LIMIT=100